
@{
    ViewBag.Title = "Knowledgebase";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <style>
        .mySlides {
            display: none;
        }
    </style>
</head>
<body>
    <!--Introduction-->
    <div class="container" style="margin-top:20px">
        <div class="row">
            <div class="col-sm-4">
                <h1 style="font-size:20px;font-style:italic;font-family:'Times New Roman', Times, serif">QUESTIONAIRE</h1>
            </div>
            <div class="col-sm-8">
                <p>
                    Dear international students:<br>
                    We will confidential keep your information in our system,<br>
                    short and briefly write down your information and rental issues if you need any further help and assistance.
                </p>
            </div>
        </div>
    </div>
    <!--Scrolling questionaire-->
    <div class="w3-content w3-display-container" style="width:60%;margin-left:20%;height:400px;margin-top:50px">
        <div class="mySlides" style="width: 100%;height: 100%;background-image: url('../../Image/questionaireBackground1.png');background-position: center;background-repeat: no-repeat;background-size:cover;">
            <form action="/action_page.php" style="margin-left:10%">
                <br>
                <br>
                <p>Q1 What kind of rental problem you are suffering?</p>
                <input type="radio" name="Q1" value="Bond issues"> Bond issues<br>
                <input type="radio" name="Q1" value="Lease agreement"> Lease agreement<br>
                <input type="radio" name="Q1" value="Rights and Obligations"> Rights and Obligations<br>
                <input type="radio" name="Q1" value="Scams"> Scams<br>
                <input type="radio" name="Q1" value="Notice Periods"> Notice Periods<br>
                <br>
                <br>
                <p>Q2 How long has this been bothering you?</p>
                <input type="radio" name="Q2" value="Half year"> Half year<br>
                <input type="radio" name="Q2" value="Three months"> Three months<br>
                <input type="radio" name="Q2" value="Couple weeks"> Couple weeks<br>
            </form>
        </div>
        <div class="mySlides" style="width: 100%;height: 100%;background-image: url('../../Image/questionaireBackground2.png');background-position: center;background-repeat: no-repeat;background-size:cover;"><p>2</p></div>
        <div class="mySlides" style="width: 100%;height: 100%;background-image: url('../../Image/questionaireBackground3.png');background-position: center;background-repeat: no-repeat;background-size:cover;"><p>3</p></div>
        <div class="mySlides" style="width: 100%;height: 100%;background-image: url('../../Image/questionaireBackground4.png');background-position: center;background-repeat: no-repeat;background-size:cover;"><p>4</p></div>
        <button class="w3-button w3-black w3-display-left" onclick="plusDivs(-1)">&#10094;</button>
        <button class="w3-button w3-black w3-display-right" onclick="plusDivs(1)">&#10095;</button>
    </div>

    <script>
        var slideIndex = 1;
        showDivs(slideIndex);

        function plusDivs(n) {
            showDivs(slideIndex += n);
        }

        function showDivs(n) {
            var i;
            var x = document.getElementsByClassName("mySlides");
            if (n > x.length) { slideIndex = 1 }
            if (n < 1) { slideIndex = x.length }
            for (i = 0; i < x.length; i++) {
                x[i].style.display = "none";
            }
            x[slideIndex - 1].style.display = "block";
        }
    </script>

</body>
</html>

